<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vily.videodemo1.camera2.MainActivity">



    <com.vily.videodemo1.camera2.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentRight="true"
        />
    <com.vily.videodemo1.camera2.AutoFitTextureView
        android:id="@+id/sv_surface2"
        android:layout_alignParentRight="true"

        android:layout_width="wrap_content"
        android:background="@drawable/second_surface"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <ImageView
            android:id="@+id/iv_change_flash"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_margin="7dp"
            android:src="@mipmap/video_flash_close"/>
        <ImageView
            android:id="@+id/iv_change_camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_margin="7dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/video_camera"/>
    </RelativeLayout>

</RelativeLayout>
